<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="1">
		<provider> org.hibernate.ejb.HibernatePersistence</provider>
		<mapping-file>orm.xml</mapping-file>
		<properties>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/cmpe275"/>
			<property name="hibernate.connection.username" value="cmpe275"/>
			<property name="hibernate.connection.password" value="cmpe275"/>
			<property name="hibernate.default_schema" value="site1"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

        	<!-- Echo all executed SQL to stdout -->
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
